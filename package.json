{
    "name": "max-text",
    "version": "1.0.0",
    "description": "Offline Speech-to-Text Desktop App using Whisper.cpp",
    "main": "dist/app/main/index.js",
    "scripts": {
        "build": "tsc && npm run copy-renderer",
        "copy-renderer": "xcopy /E /Y /I app\\renderer dist\\app\\renderer",
        "watch": "tsc -w",
        "start": "npm run build && electron .",
        "dev": "concurrently \"npm run watch\" \"electron .\"",
        "lint": "eslint . --ext .ts",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "keywords": [
        "electron",
        "whisper",
        "speech-to-text",
        "offline",
        "transcription"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "uiohook-napi": "^1.5.4"
    },
    "build": {
        "appId": "com.maxtext.app",
        "productName": "Max-Text",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "resources/**/*"
        ],
        "extraResources": [
            {
                "from": "resources/bin",
                "to": "bin",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "resources/icons/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "resources/icons/icon.png",
            "category": "Utility"
        }
    }
}